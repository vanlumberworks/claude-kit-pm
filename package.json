{
  "name": "pm-kit-cli",
  "version": "0.1.0",
  "description": "Product Manager Kit CLI installer for Claude - AI-assisted PM workflows",
  "main": "lib/index.js",
  "bin": {
    "pm-kit": "./bin/pm-kit.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint lib/ bin/ tests/",
    "lint:fix": "eslint lib/ bin/ tests/ --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "prepare": "husky install",
    "prepublishOnly": "npm test && npm run lint"
  },
  "keywords": [
    "claude",
    "product-management",
    "pm",
    "prd",
    "cli",
    "ai",
    "assistant",
    "user-stories",
    "requirements",
    "documentation",
    "research",
    "competitive-analysis"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/pm-kit-cli.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/pm-kit-cli/issues"
  },
  "homepage": "https://github.com/your-org/pm-kit-cli#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.1.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "prompts": "^2.4.2",
    "minimatch": "^9.0.5",
    "node-fetch": "^3.3.2",
    "ora": "^8.0.1",
    "boxen": "^7.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2"
  },
  "files": [
    "bin/",
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "lib/**/*.js",
      "bin/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
